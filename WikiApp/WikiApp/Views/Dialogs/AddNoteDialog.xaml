<Window x:Class="WikiApp.Views.Dialogs.AddNoteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WikiApp.Views.Dialogs"
        mc:Ignorable="d"
        Title="Add Note" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Note Title:" Margin="0,0,0,5"/>
            <TextBox x:Name="NoteTitleTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Category:" Margin="0,0,0,5"/>
            <ComboBox x:Name="CategoryComboBox" DisplayMemberPath="Name" SelectedValuePath="Id" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" Width="75" Margin="5" Click="OkButton_Click"/>
                <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
