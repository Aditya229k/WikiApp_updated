<Window x:Class="WikiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
        xmlns:vm="clr-namespace:WikiApp.ViewModels"
        xmlns:local="clr-namespace:WikiApp.Converters"

        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Wiki App" Height="600" Width="1000"
        x:Name="MainWin">

    <Window.Resources>
        <local:SnippetHighlighterConverter x:Key="SnippetHighlighterConverter" />
        <local:StringNotEmptyToVisibilityConverter x:Key="StringNotEmptyToVisibilityConverter" />
    </Window.Resources>


    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <DockPanel Grid.Column="0" Margin="10" Background="#f4f4f4">
            <!-- Add + Search -->
            <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                <Button x:Name="AddButton"
                        Content="➕ Add"
                        Height="35"
                        FontWeight="Bold"
                        FontSize="14"
                        Padding="10,5"
                        HorizontalAlignment="Stretch"
                        Click="AddButton_Click">
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="New Category"
                                      Command="{Binding AddCategoryCommand}" />
                            <MenuItem Header="New Note"
                                      Command="{Binding AddNoteCommand}" />
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>

                <!-- Search Box -->
                <TextBox Margin="0,10,0,0"
         FontSize="13"
         Padding="6,4"
         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Button Content="Clear"
            Padding="10,5"
            Command="{Binding ClearSearchCommand}"
            Visibility="{Binding SearchText, Converter={StaticResource StringNotEmptyToVisibilityConverter}}" />
                </StackPanel>



                <!-- Snippet Search Result List -->
                <ItemsControl ItemsSource="{Binding SearchResults}" Margin="0,10,0,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="5" Margin="0,5,0,5" Padding="8"
                    Background="#FAFAFA" MouseLeftButtonUp="SearchResult_Click">
                                <StackPanel>
                                    <TextBlock Text="{Binding FileName}" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text="{Binding Snippet}" FontSize="12" TextWrapping="Wrap" Foreground="Gray" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>




            </StackPanel>

            <!-- TreeView -->
            <Border Background="#F4F4F4" CornerRadius="4">
                <TreeView ItemsSource="{Binding FilteredCategories}"
              SelectedItemChanged="TreeView_SelectedItemChanged"
              x:Name="NotesTreeView"
              Background="#f4f4f4"
              FontSize="16" FontWeight="DemiBold">

                    <TreeView.Resources>
                        <!-- Category Template -->
                        <HierarchicalDataTemplate DataType="{x:Type vm:CategoryViewModel}" ItemsSource="{Binding Notes}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" ToolTip="{Binding Name}" />
                                <StackPanel.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Rename"
                                      Command="{Binding DataContext.EditCategoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                      CommandParameter="{Binding}" />
                                        <MenuItem Header="Delete"
                                      Command="{Binding DataContext.DeleteCategoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                      CommandParameter="{Binding}" />
                                    </ContextMenu>
                                </StackPanel.ContextMenu>
                            </StackPanel>
                        </HierarchicalDataTemplate>

                        <!-- Note Template -->
                        <DataTemplate DataType="{x:Type vm:NoteViewModel}">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/note.png" Width="16" Height="16" Margin="0,0,5,0" />
                                <TextBlock Text="{Binding Title}" ToolTip="{Binding Title}" />
                                <StackPanel.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Edit"
                                      Command="{Binding DataContext.EditNoteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                      CommandParameter="{Binding}" />
                                        <MenuItem Header="Delete"
                                      Command="{Binding DataContext.DeleteNoteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                      CommandParameter="{Binding}" />
                                    </ContextMenu>
                                </StackPanel.ContextMenu>
                            </StackPanel>
                        </DataTemplate>
                    </TreeView.Resources>
                </TreeView>
            </Border>
        </DockPanel>

        <!-- Right Panel -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                <Button Content="Edit" Command="{Binding EditCommand}" Height="30" Margin="5" Padding="10,0" />
                <Button Content="Save" Command="{Binding SaveCommand}" Height="30" Margin="5" Padding="10,0"
                        Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}" />
                <Button Content="Cancel" Command="{Binding CancelCommand}" Height="30" Margin="5" Padding="10,0"
                        Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}" />
            </StackPanel>

            <!-- View/Edit -->
            <Grid Grid.Row="1">
                <!-- View Mode -->
                <Grid Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVisibilityConverter}}" Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <wv2:WebView2 x:Name="PreviewBrowser" Grid.Row="0" Margin="0,0,0,10" />

                    <TextBlock Text="Tags:" FontWeight="Bold" Grid.Row="1" Margin="0,5,0,2"/>
                    <ItemsControl ItemsSource="{Binding SelectedNote.Tags}" Grid.Row="2">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#EEE" Padding="5,2" Margin="3"
                                        CornerRadius="5" BorderBrush="#CCC" BorderThickness="1">
                                    <TextBlock Text="{Binding ., StringFormat=•\ {0}}" FontSize="12"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>

               
                <!-- Edit Mode: Editor (Top) + Live Preview (Bottom) -->
                <Grid Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" />
                        <!-- Editor -->
                        <RowDefinition Height="2*" />
                        <!-- Preview -->
                        <RowDefinition Height="Auto" />
                        <!-- Tags Label -->
                        <RowDefinition Height="Auto" />
                        <!-- Tags Input -->
                    </Grid.RowDefinitions>

                    <!-- Markdown Editor -->
                    <TextBox x:Name="EditorTextBox"
             Grid.Row="0"
             AllowDrop="True"
             PreviewDragOver="EditorTextBox_PreviewDragOver"
             Drop="EditorTextBox_Drop"
             Text="{Binding NoteContent, UpdateSourceTrigger=PropertyChanged}"
             AcceptsReturn="True"
             VerticalScrollBarVisibility="Auto"
             FontFamily="Consolas"
             FontSize="14"
             Margin="0,0,0,10" />

                    <!-- Live Markdown Preview -->
                    <wv2:WebView2 x:Name="EditPreviewBrowser"
                  Grid.Row="1"
                  Margin="0,0,0,10" />

                    <!-- Tags Label -->
                    <TextBlock Text="Tags (comma-separated):"
               Grid.Row="2"
               Margin="0,0,0,2" />

                    <!-- Tags Input -->
                    <TextBox Text="{Binding TagsInput, UpdateSourceTrigger=PropertyChanged}"
             Grid.Row="3" />
                </Grid>

            </Grid>
        </Grid>
    </Grid>
</Window>
